# GitHub Personal Access Token (optional, but recommended for higher rate limits)
# Generate at: https://github.com/settings/tokens
# Required permissions: repo (for private repos) or public_repo (for public repos)
GITHUB_TOKEN=your_github_personal_access_token_here

# GitHub Teams Personal Access Token (optional, for team membership validation)
# Generate at: https://github.com/settings/tokens
# Required permissions: read:org (to read organization teams and memberships)
# This allows checking if users are members of specified teams for validation bypass
GITHUB_TEAMS_TOKEN=your_teams_token_here

# Server port (optional, defaults to 3001)
PORT=3001

# Email Configuration (Optional - for feedback notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FEEDBACK_EMAIL=feedback@yourdomain.com

# Database Configuration (Optional - for feedback storage)
DATABASE_URL=postgresql://user:password@localhost:5432/pr_approval_feedback

# Slack Webhook (Optional - for feedback notifications)  
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK 